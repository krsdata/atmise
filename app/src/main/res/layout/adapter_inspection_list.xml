<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/noti_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/normal"
                    android:text="Vehicle ID"
                    android:textStyle="bold"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/bodyTextSizeNormal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/normal"
                    android:text="#42047"
                    android:id="@+id/textVehicelIdNumber"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bodyTextSizeNormal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/normal"
                    android:text="Current Miles"
                    android:textStyle="bold"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/bodyTextSizeNormal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/normal"
                    android:text="381223"
                    android:id="@+id/textCurrentMilles"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bodyTextSizeNormal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:fontFamily="@font/normal"
                    android:text="Insurance exp"
                    android:textStyle="bold"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/bodyTextSizeNormal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:fontFamily="@font/normal"
                    android:text="03/12/2020"
                    android:id="@+id/textInsuranceExp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bodyTextSizeNormal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:fontFamily="@font/normal"
                    android:text="Registration exp"
                    android:textColor="@color/colorYellow"
                    android:textStyle="bold"
                    android:textSize="@dimen/bodyTextSizeNormal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="03/12/2020"
                    android:id="@+id/textRegistrationExp"

                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/black"
                    app:fontFamily="@font/normal"
                    android:textSize="@dimen/bodyTextSizeNormal" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:fontFamily="@font/normal"
                    android:text="State Inspection exp"
                    android:textColor="@color/colorYellow"
                    android:textStyle="bold"
                    android:textSize="@dimen/bodyTextSizeNormal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="03/12/2020"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/black"
                    app:fontFamily="@font/normal"
                    android:id="@+id/textStateInspectionExp"
                    android:textSize="@dimen/bodyTextSizeNormal" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonViewDetails"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@drawable/button_yellow"
                    android:fontFamily="@font/normal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textAllCaps="false"
                    android:text="View Detail"
                    android:textColor="@color/offWhite"
                    android:textSize="@dimen/bodyTextSizeExtraSmall" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>