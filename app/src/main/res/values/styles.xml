<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="progressBarTheme" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/bodyTextSizeNormal</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
    <style name="TabStyleLarge" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/bodyTextSizeExtraLarge</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
    <style name="TabStyleExtraLarge" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/bodyTextSizeExtraLarge</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>
</resources>
